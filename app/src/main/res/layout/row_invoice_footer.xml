<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtSubtotal"
            android:text="Subtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txtSubtotalPrice"
            android:layout_margin="15dp"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/txtSubtotalPrice"
            android:text="*price*"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:textAlignment="textEnd"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/taxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTax"
            android:text="Tax"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/txtTaxPrice"
            android:text="*price*"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/txtTaxPercentage"
            android:text="*(tax %)*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txtTaxPrice"
            android:layout_toRightOf="@+id/txtTax"
            android:layout_margin="15dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTotal"
            android:text="TOTAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txtTotalPrice"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/txtTotalPrice"
            android:text="*price*"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:textAlignment="textEnd"
            android:layout_width="160dp"/>

    </RelativeLayout>

</LinearLayout>