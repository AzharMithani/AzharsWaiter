<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cdelg4do.waiterdroid">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.azhar.waiter.activities.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name="com.azhar.waiter.activities.TablePagerActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name="com.azhar.waiter.activities.OrderDetailActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name="com.azhar.waiter.activities.DishListActivity">
        </activity>

        <activity
            android:name="com.azhar.waiter.activities.InvoiceActivity"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
            android:name="com.azhar.waiter.activities.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>

    </application>

</manifest>